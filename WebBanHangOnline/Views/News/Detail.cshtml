@model WebBanHangOnline.Models.EF.News

@{
    ViewBag.Title = Model?.SeoTitle ?? "Default Title"; // Fallback title
    ViewBag.SeoDescription = Model?.SeoDescription ?? "Default Description"; // Fallback description
    ViewBag.SeoKeyWord = Model?.SeoKeywords ?? "Default Keywords"; // Fallback keywords
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<!-- Slider -->
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>

<div class="container news_section_container">
    @if (Model != null)
    {
        <div class="row">
            <div class="col-md-12">
                <h1 class="title-news">@Html.DisplayFor(model => model.Title)</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p>@Html.Raw(Model.Description)</p>
            </div>
            <div class="col-md-12">
                @Html.Raw(Model.Detail)
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <h2>No news article found.</h2>
            </div>
        </div>
    }
</div>
