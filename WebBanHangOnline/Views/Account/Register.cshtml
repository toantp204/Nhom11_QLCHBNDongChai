@model WebBanHangOnline.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<div class="container" style="margin-top:160px">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewBag.Title</h2>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Create a new account.</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <!-- Trường nhập tên đầy đủ -->
                <div class="form-group">
                    @Html.LabelFor(m => m.FullName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Enter your full name" })
                    </div>
                </div>

                <!-- Trường nhập email -->
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>

                <!-- Trường nhập mật khẩu -->
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Create a strong password" })
                    </div>
                </div>

                <!-- Trường nhập lại mật khẩu để xác nhận -->
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Re-enter your password" })
                    </div>
                </div>

                <!-- Thêm trường số điện thoại -->
                <div class="form-group">
                    @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Enter your phone number" })
                    </div>
                </div>

                <!-- Checkbox điều khoản và điều kiện -->
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="terms" /> I agree to the <a href="#">Terms and Conditions</a>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Nút đăng ký với style và disable khi chưa tích vào checkbox -->
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-primary" id="registerButton" value="Register" disabled="disabled" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function() {
            // Kích hoạt nút đăng ký khi người dùng tích vào checkbox
            $('#terms').click(function() {
                if ($('#terms').is(':checked')) {
                    $('#registerButton').removeAttr('disabled');
                } else {
                    $('#registerButton').attr('disabled', 'disabled');
                }
            });

            // Kiểm tra độ mạnh của mật khẩu
            $('#Password').keyup(function() {
                var password = $(this).val();
                if (password.length < 6) {
                    $('#passwordStrength').text('Weak password').css('color', 'red');
                } else {
                    $('#passwordStrength').text('Strong password').css('color', 'green');
                }
            });
        });
    </script>
}
