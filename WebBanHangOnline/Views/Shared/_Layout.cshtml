    <script>
        $(document).ready(function () {
            // Hiển thị hoặc ẩn nút kéo lên đầu trang khi cuộn trang
            $(window).scroll(function () {
                if ($(this).scrollTop() > 200) {
                    $('#scrollToTop').fadeIn();
                } else {
                    $('#scrollToTop').fadeOut();
                }
            });

            // Khi nhấp vào nút kéo lên đầu trang, cuộn lên đầu trang
            $('#scrollToTop').click(function () {
                $('html, body').animate({ scrollTop: 0 }, 800);
                return false;
            });
        });
    </script>
