@model WebBanHangOnline.Models.EF.Subscribe

<style>

    .newsletter_text p {
        margin: 0;
        font-size: 1.2em;
        padding-bottom: 10px;
    }

    .newsletter_form {
        display: flex;
        align-items: center;
    }

        .newsletter_form input, .newsletter_form button {
            padding: 10px;
            margin: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .newsletter_form input {
            width: 200px;
        }

        .newsletter_form button {
            background-color: #ff6b6b;
            color: white;
            border: none;
            cursor: pointer;
        }
</style>

<div class="newsletter">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="newsletter_text d-flex flex-column justify-content-center align-items-lg-start align-items-md-center text-center">
                    <h5>Hãy đăng ký để nhận được những ưu đãi tốt nhất từ chúng tôi</h5>
                </div>
            </div>
            <div class="col-lg-6">
                @using (Ajax.BeginForm("Subscribe", "Home", new AjaxOptions
                {
                    OnBegin = "OnBeginSub",
                    OnSuccess = "OnSuccessSub",
                    OnFailure = "OnFailureSub"
                }))
                {
                    @Html.AntiForgeryToken()
                    <script>
                        function OnBeginSub() {

                        }
                        function OnSuccessSub(rs) {
                            if (rs.Success) {
                                alert("OK");
                            }
                        }
                        function OnFailureSub(rs) { }
                    </script>
                    <div class="newsletter_form d-flex flex-md-row flex-column flex-xs-column align-items-center justify-content-lg-end justify-content-center">
                        @*@Html.TextBoxFor(x => x.Email, new {})*@
                        <input id="newsletter_email" name="Email" type="email" placeholder="Your email" required="required" data-error="Valid email is required.">
                        <button id="newsletter_submit" type="submit" class="newsletter_submit_btn trans_300" value="Submit">subscribe</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
